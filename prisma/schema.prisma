generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime
  updatedAt DateTime

  name          String
  email         String  @unique
  emailVerified Boolean
  image         String?

  sessions         Session[]
  accounts         Account[]
  orders           Order[]
  billingAddresses BillingAddress[]
  entitledProducts UserProductEntitlement[] // NEW

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime
  updatedAt DateTime

  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model Account {
  id        String   @id @default(uuid())
  createdAt DateTime
  updatedAt DateTime

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
  @@index([userId])
}

model Product {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Base product information
  sku           String                   @unique
  description   String
  unitCost      Float
  imageUrl      String?
  // Relations
  entitledUsers UserProductEntitlement[]

  @@index([sku])
  @@map("products")
}

// NEW: User entitlements with per-user customizations

model UserProductEntitlement {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  productId String

  // Access metadata
  grantedAt DateTime @default(now())
  grantedBy String? // Admin user ID who granted access

  // Per-user customizations (nullable = use product defaults)
  customSku         String?
  customDescription String?
  customUnitCost    Float?
  customImageUrl    String?

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@map("user_product_entitlements")
}

// Main Order model

model Order {
  id      String  @id @default(cuid())
  orderId String  @unique // Custom order ID like "ORD-20260108-X7K9P"
  userId  String? // Optional if you have auth
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Order status
  status OrderStatus @default(PENDING)

  // Customer information (denormalized for easy access)
  customerEmail        String
  customerOrganization String

  serviceFee     Int
  totalOrderCost Float
  cartSubTotal   Float
  cartSize       Int

  // snapshot (immutable)
  billingEmail        String
  billingOrganization String
  billingAddress      String
  billingABN          String

  // optional reference (for UI only)
  billingAddressId String?

  // Order items
  items OrderItem[]

  // Invoice processing
  invoiceGenerated Boolean @default(false)
  invoiceUrl       String? // S3 URL
  invoiceS3Key     String? // S3 object key for deletion/updates

  // Email tracking
  emailSent   Boolean   @default(false)
  emailSentAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoiceId String

  @@index([orderId])
  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
  @@index([userId])
  @@map("orders")
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Product reference
  productId String?

  // Product snapshot (what user saw at time of order - IMMUTABLE)
  sku         String
  quantity    Int
  description String
  total       Float
  unitCost    Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model BillingAddress {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  email        String
  organization String
  address      String
  ABN          String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("billing_addresses")
}

// Enums

enum OrderStatus {
  PENDING // Just created, background job queued
  PROCESSING // background jobs are running
  PDF_GENERATED // PDF_GENERATED
  PDF_STORED // pdf is stored in s3
  EMAIL_SENT // email sent with pdf
  FAILED // Processing failed after retries

  @@map("order_status")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
  @@index([identifier])
}
